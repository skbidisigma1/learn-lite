---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";

const videoTutorials = [
  { title: "Introduction to Linear Algebra", channel: "Math Academy", duration: "45:30" },
  { title: "The Art of Essay Writing", channel: "Write Better", duration: "32:15" },
  { title: "Understanding Chemical Bonds", channel: "Science Hub", duration: "28:45" },
];

const articles = [
  { title: "10 Tips for Better Note-Taking", author: "Dr. Sarah Chen", readTime: "8 min" },
  { title: "How to Overcome Test Anxiety", author: "Prof. Michael Torres", readTime: "12 min" },
  { title: "The Science of Memory Retention", author: "Dr. Emily Watson", readTime: "15 min" },
];


---

<BaseLayout>
  <!-- Header Section -->
  <div class="mb-8">
    <h1 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white"><span class="text-blue-600 dark:text-blue-400">Learning</span> Resources</h1>
    <p class="text-gray-500 dark:text-gray-400">Discover tools, tutorials, and materials to boost your academic success</p>
  </div>

  <!-- Video Tutorials -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold mb-4 text-blue-600 dark:text-blue-400 border-l-4 border-blue-600 dark:border-blue-400 pl-3">Video Tutorials</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {videoTutorials.map(video => (
        <div class="bg-white dark:bg-gray-800 p-4 rounded-xl border border-gray-100 dark:border-gray-700 hover:border-blue-400 dark:hover:border-blue-500 hover:shadow-md hover:bg-blue-50 dark:hover:bg-gray-700 transition-all cursor-pointer">
          <h4 class="font-medium text-gray-900 dark:text-white mb-2">{video.title}</h4>
          <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
            <span>{video.channel}</span>
            <span>{video.duration}</span>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Articles -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold mb-4 text-blue-600 dark:text-blue-400 border-l-4 border-blue-600 dark:border-blue-400 pl-3">Articles</h2>
    <div class="space-y-2">
      {articles.map(article => (
        <div class="bg-white dark:bg-gray-800 p-4 rounded-xl border border-gray-100 dark:border-gray-700 hover:border-blue-400 dark:hover:border-blue-500 hover:shadow-md hover:bg-blue-50 dark:hover:bg-gray-700 transition-all cursor-pointer flex items-center justify-between">
          <div>
            <h4 class="font-medium text-gray-900 dark:text-white">{article.title}</h4>
            <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
              <span>{article.author}</span>
              <span>Â·</span>
              <span>{article.readTime} read</span>
            </div>
          </div>
          <Button size="sm" variant="outline">Read</Button>
        </div>
      ))}
    </div>
  </div>
  </div>
</BaseLayout>
