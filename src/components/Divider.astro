---
interface Props {
  label?: string;
  orientation?: 'horizontal' | 'vertical';
}

const { label, orientation = 'horizontal' } = Astro.props;
---

{orientation === 'horizontal' ? (
  label ? (
    <div class="relative flex items-center py-2">
      <div class="flex-grow border-t border-gray-200 dark:border-gray-700"></div>
      <span class="flex-shrink mx-4 text-sm text-gray-500 dark:text-gray-400">{label}</span>
      <div class="flex-grow border-t border-gray-200 dark:border-gray-700"></div>
    </div>
  ) : (
    <hr class="border-gray-200 dark:border-gray-700 my-4" />
  )
) : (
  <div class="inline-block w-px h-full bg-gray-200 dark:bg-gray-700 mx-2"></div>
)}
