---

// Props (plain JS):
const {
  title,
  instructor,
  schedule,
  room,
  href = '#'
} = Astro.props;

const cardClasses = 'w-full bg-white dark:bg-gray-800 p-4 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 hover:border-blue-400 dark:hover:border-blue-500 hover:shadow-lg hover:bg-blue-50 dark:hover:bg-gray-700 transition-transform transition-shadow duration-300 ease-out motion-safe:transition-transform motion-safe:duration-300 motion-safe:ease-out motion-reduce:transition-none hover:-translate-y-[4px]';
---

<a href={href} class={cardClasses}>
  <div class="flex items-start justify-between gap-1 mb-2">
    <div class="min-w-0">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white truncate">{title}</h3>
    </div>
  </div>

  {instructor && (
    <p class="text-sm text-gray-600 dark:text-gray-300 truncate mb-2">Instructor: {instructor}</p>
  )}

  {schedule && (
    <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">{schedule}{room ? ` â€¢ ${room}` : ''}</p>
  )}
  </div>
</a>
